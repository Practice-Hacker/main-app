<%= render partial: "/partials/navbar" %>
<section class='pieces'>
<% current_user.favorite_pieces.each do |favorite_piece| %>
  <section id="piece-<%= favorite_piece.id %>">
    <%= link_to 'Remove from Favorites', user_favorite_path(piece_id: favorite_piece.id, user_id: current_user.id, id: favorite_piece.id), method: :delete %>
    <section class='title'>
      <%= link_to favorite_piece.piece.title, piece_show_path(favorite_piece.piece.id) %>
    </section>

    <section class='composer'>
      <%= favorite_piece.piece.composer %>
    </section>

    <section class='contributions'>

    </section>
  </section>
<% end %>
</section>
