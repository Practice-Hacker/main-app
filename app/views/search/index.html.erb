<h1>Search Results</h1>

<section class="pieces">
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Piece Title</th>
      <th scope="col">Composer Name</th>
      <th scope="col">Subtitle</th>
    </tr>
    </thead>
    <tbody>
    <% @pieces.each do |piece| %>
      <% if piece.title %>
        <tr class="piece" id = <%= piece.piece_id %>>
          <td ><%= piece.title %></td>
          <td><%= piece.name %></td>
          <td><%= piece.subtitle %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</section>